<% if Attendance.where(date: Date.current).any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Student</th>
        <th>Status</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
      <% Attendance.includes(:student).where(date: Date.current).limit(5).each do |attendance| %>
        <tr>
          <td><%= attendance.student.first_name %> <%= attendance.student.last_name %></td>
          <td>
            <span class="status-badge status-<%= attendance.status %>">
              <%= attendance.status.humanize %>
            </span>
          </td>
          <td><%= attendance.created_at.strftime("%H:%M") if attendance.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No attendance records for today.</p>
<% end %>