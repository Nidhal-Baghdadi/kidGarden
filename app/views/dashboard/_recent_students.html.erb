<% if Student.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Classroom</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% Student.includes(:classroom).limit(5).each do |student| %>
        <tr>
          <td><%= link_to "#{student.first_name} #{student.last_name}", student_path(student) %></td>
          <td><%= student.classroom&.name || 'Unassigned' %></td>
          <td>
            <span class="status-badge status-<%= student.status %>">
              <%= student.status.humanize %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No students found. <%= link_to "Add a student", new_student_path, class: "btn btn-primary" %> to get started.</p>
<% end %>