<% content_for :title, "Edit Student" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Edit Student: <%= @student.first_name %> <%= @student.last_name %></h1>
  <%= link_to "Show", @student, class: "btn btn-outline" %>
  <%= link_to "Back to Students", students_path, class: "btn btn-outline", style: "margin-left: 0.5rem;" %>
</div>

<div class="card">
  <%= form_with model: @student, local: true, class: "form" do |form| %>
    <% if @student.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h4>
        <ul>
          <% @student.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2">
      <div class="form-group">
        <%= form.label :first_name, class: "form-label" %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name, class: "form-label" %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :date_of_birth, class: "form-label" %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :enrollment_date, class: "form-label" %>
        <%= form.date_field :enrollment_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, Student.statuses.keys.map { |key| [key.humanize, key] }, { selected: @student.status }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :gender, class: "form-label" %>
        <%= form.select :gender, Student.genders.keys.map { |key| [key.humanize, key] }, { selected: @student.gender }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :classroom_id, "Classroom", class: "form-label" %>
        <%= form.select :classroom_id, Classroom.all.map { |classroom| [classroom.name, classroom.id] }, { prompt: "Select Classroom" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :parent_id, "Primary Parent/Guardian", class: "form-label" %>
        <%= form.select :parent_id, User.where(role: 'parent').map { |user| [user.name, user.id] }, { prompt: "Select Parent" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :emergency_contact_name, class: "form-label" %>
        <%= form.text_field :emergency_contact_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :emergency_contact_phone, class: "form-label" %>
        <%= form.telephone_field :emergency_contact_phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :medical_information, class: "form-label" %>
      <%= form.text_area :medical_information, rows: 4, class: "form-control" %>
    </div>

    <div class="d-flex justify-between mt-4">
      <%= form.submit "Update Student", class: "btn btn-primary" %>
      <%= link_to "Cancel", students_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>