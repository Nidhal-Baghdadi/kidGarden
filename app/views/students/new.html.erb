<% content_for :title, "New Student" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Add Student</h1>
    <p class="page-header__subtitle">Create a new student record.</p>
  </div>

  <div class="page-actions">
    <%= link_to "Back", students_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="card">
  <% if @student.errors.any? %>
    <div class="alert alert--error">
      <strong><%= pluralize(@student.errors.count, "error") %> prevented saving:</strong>
      <ul style="margin:8px 0 0 18px;">
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @student, local: true do |form| %>
    <div class="form-grid">
      <div class="form-group">
        <%= form.label :first_name, class: "form-label" %>
        <%= form.text_field :first_name, class: "form-control", autocomplete: "given-name" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name, class: "form-label" %>
        <%= form.text_field :last_name, class: "form-control", autocomplete: "family-name" %>
      </div>

      <div class="form-group">
        <%= form.label :date_of_birth, class: "form-label" %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :enrollment_date, class: "form-label" %>
        <%= form.date_field :enrollment_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, Student.statuses.keys.map { |k| [k.humanize, k] },
              { prompt: "Select status" },
              { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :gender, class: "form-label" %>
        <%= form.select :gender, Student.genders.keys.map { |k| [k.humanize, k] },
              { prompt: "Select gender" },
              { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :classroom_id, "Classroom", class: "form-label" %>
        <%= form.select :classroom_id, Classroom.order(:name).map { |c| [c.name, c.id] },
              { prompt: "Select classroom" },
              { class: "form-control" } %>
      </div>

      <% unless current_user.parent? %>
        <div class="form-group">
          <%= form.label :parent_id, "Primary Parent/Guardian", class: "form-label" %>
          <%= form.select :parent_id, User.where(role: :parent).order(:name).map { |u| [u.name, u.id] },
                { prompt: "Select parent" },
                { class: "form-control" } %>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :emergency_contact_name, class: "form-label" %>
        <%= form.text_field :emergency_contact_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :emergency_contact_phone, class: "form-label" %>
        <%= form.telephone_field :emergency_contact_phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :medical_information, "Medical information", class: "form-label" %>
      <%= form.text_area :medical_information, rows: 4, class: "form-control" %>
      <div class="form-help" style="margin-top:6px;">
        Include allergies, conditions, or special instructions.
      </div>
    </div>

    <div class="page-actions" style="justify-content:flex-end; margin-top: 14px;">
      <%= link_to "Cancel", students_path, class: "btn" %>
      <%= form.submit "Create Student", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
