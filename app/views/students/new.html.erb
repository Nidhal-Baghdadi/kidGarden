<% content_for :title, "New Student" %>

<div class="d-flex justify-between items-center mb-6">
  <div>
    <h1 class="text-2xl font-bold">Add New Student</h1>
    <p class="text-sm text-gray-500 mt-1">Enter student details below</p>
  </div>
  <%= link_to "Back to Students", students_path, class: "btn btn-outline" %>
</div>

<div class="card">
  <%= form_with model: @student, local: true, class: "space-y-6" do |form| %>
    <% if @student.errors.any? %>
      <div class="alert alert-error">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium"><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h3>
            <div class="mt-2 list-disc pl-5 space-y-1">
              <% @student.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="form-group">
        <%= form.label :first_name, class: "form-label" %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :last_name, class: "form-label" %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :date_of_birth, class: "form-label" %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :enrollment_date, class: "form-label" %>
        <%= form.date_field :enrollment_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, Student.statuses.keys.map { |key| [key.humanize, key] }, { prompt: "Select Status" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :gender, class: "form-label" %>
        <%= form.select :gender, Student.genders.keys.map { |key| [key.humanize, key] }, { prompt: "Select Gender" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :classroom_id, "Classroom", class: "form-label" %>
        <%= form.select :classroom_id, Classroom.all.map { |classroom| [classroom.name, classroom.id] }, { prompt: "Select Classroom" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :parent_id, "Primary Parent/Guardian", class: "form-label" %>
        <%= form.select :parent_id, User.where(role: 'parent').map { |user| [user.name, user.id] }, { prompt: "Select Parent" }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :emergency_contact_name, class: "form-label" %>
        <%= form.text_field :emergency_contact_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :emergency_contact_phone, class: "form-label" %>
        <%= form.telephone_field :emergency_contact_phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :medical_information, "Medical Information", class: "form-label" %>
      <%= form.text_area :medical_information, rows: 4, class: "form-control" %>
      <p class="mt-1 text-sm text-gray-500">Any relevant medical information about the student</p>
    </div>

    <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
      <%= link_to "Cancel", students_path, class: "btn btn-outline" %>
      <%= form.submit "Create Student", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>