<%= form_with model: @payment, local: true, class: "form" do |form| %>
  <% if @payment.errors.any? %>
    <div class="alert alert-error">
      <h4><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h4>
      <ul>
        <% @payment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-4">
    <div class="form-group">
      <%= form.label :fee_id, "Associated Fee", class: "form-label" %>
      <%= form.select :fee_id, @fees.map { |fee| ["#{fee.student&.first_name} #{fee.student&.last_name} - #{fee.description || "Fee ##{fee.id}"} - $#{'%.2f' % fee.amount}", fee.id] }, { prompt: "Select Fee" }, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :amount, class: "form-label" %>
      <%= form.number_field :amount, step: 0.01, class: "form-control", value: @payment.amount || "" %>
    </div>

    <div class="form-group">
      <%= form.label :payment_method, "Payment Method", class: "form-label" %>
      <%= form.select :payment_method, Payment.payment_methods.keys.map { |key| [key.humanize, key] }, { prompt: "Select Payment Method" }, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, Payment.statuses.keys.map { |key| [key.humanize, key] }, { prompt: "Select Status" }, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :payment_date, "Payment Date", class: "form-label" %>
      <%= form.date_field :payment_date, class: "form-control", value: @payment.payment_date || Date.current %>
    </div>

    <div class="form-group">
      <%= form.label :reference_number, "Reference Number", class: "form-label" %>
      <%= form.text_field :reference_number, class: "form-control" %>
    </div>

    <div class="form-group col-span-2">
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, rows: 3, class: "form-control" %>
    </div>
  </div>

  <div class="d-flex justify-between mt-4">
    <%= form.submit "Save Payment", class: "btn btn-primary" %>
    <%= link_to "Cancel", payments_path, class: "btn btn-outline" %>
  </div>
<% end %>