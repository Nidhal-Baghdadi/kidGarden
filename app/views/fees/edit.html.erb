<% content_for :title, "Edit Fee" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Edit Fee Record</h1>
  <%= link_to "Back to Fees", fees_path, class: "btn btn-outline" %>
</div>

<div class="card">
  <%= form_with model: @fee, local: true, class: "form" do |form| %>
    <% if @fee.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@fee.errors.count, "error") %> prohibited this fee from being saved:</h4>
        <ul>
          <% @fee.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2">
      <div class="form-group">
        <%= form.label :student_id, "Student", class: "form-label" %>
        <%= form.select :student_id, Student.all.map { |student| ["#{student.first_name} #{student.last_name}", student.id] }, { selected: @fee.student_id }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :amount, class: "form-label" %>
        <%= form.number_field :amount, step: 0.01, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :due_date, class: "form-label" %>
        <%= form.date_field :due_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, Fee.statuses.keys.map { |key| [key.humanize, key] }, { selected: @fee.status }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :receipt_number, "Receipt Number", class: "form-label" %>
        <%= form.text_field :receipt_number, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 3, class: "form-control" %>
    </div>

    <div class="d-flex justify-between mt-4">
      <%= form.submit "Update Fee", class: "btn btn-primary" %>
      <%= link_to "Cancel", fees_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>