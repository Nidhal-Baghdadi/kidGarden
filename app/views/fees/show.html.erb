<% content_for :title, "Fee Details" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Fee Record</h1>
  <div>
    <%= link_to "Edit", edit_fee_path(@fee), class: "btn btn-primary" %>
    <%= link_to "Back to Fees", fees_path, class: "btn btn-outline", style: "margin-left: 0.5rem;" %>
  </div>
</div>

<div class="grid grid-cols-2 mb-4">
  <div class="card">
    <h3>Fee Information</h3>
    <div class="form-group">
      <label><strong>Student:</strong></label>
      <p><%= @fee.student&.first_name %> <%= @fee.student&.last_name %></p>
    </div>
    <div class="form-group">
      <label><strong>Amount:</strong></label>
      <p>$<%= "%.2f" % @fee.amount %></p>
    </div>
    <div class="form-group">
      <label><strong>Due Date:</strong></label>
      <p><%= @fee.due_date.strftime("%B %d, %Y") %></p>
    </div>
    <div class="form-group">
      <label><strong>Status:</strong></label>
      <p>
        <span class="status-badge status-<%= @fee.status %>">
          <%= @fee.status.humanize %>
        </span>
      </p>
    </div>
  </div>

  <div class="card">
    <h3>Additional Information</h3>
    <div class="form-group">
      <label><strong>Receipt Number:</strong></label>
      <p><%= @fee.receipt_number || "N/A" %></p>
    </div>
    <div class="form-group">
      <label><strong>Description:</strong></label>
      <p><%= @fee.description.present? ? @fee.description : "None" %></p>
    </div>
  </div>
</div>