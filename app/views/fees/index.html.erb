<% content_for :title, "Fees" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Fee Records</h1>
  <%= link_to "New Fee", new_fee_path, class: "btn btn-primary" %>
</div>

<div class="card">
  <div class="table-header">
    <div class="table-actions">
      <input type="text"
             class="search-box"
             data-table-target="search"
             placeholder="Search fees...">
    </div>
  </div>
  <div class="table-container">
    <table class="table" id="fees-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Student</th>
          <th>Amount</th>
          <th>Due Date</th>
          <th>Status</th>
          <th>Receipt #</th>
          <th class="no-sort">Actions</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#fees-table').DataTable({
      "processing": true,
      "serverSide": true,
      "ajax": "<%= fees_path(format: :json) %>"
    });
  });
</script>