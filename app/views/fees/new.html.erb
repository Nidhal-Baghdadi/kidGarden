<% content_for :title, "New Fee" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Create Fee</h1>
    <p class="page-header__subtitle">Add a new fee record.</p>
  </div>

  <div class="page-actions">
    <%= link_to "Back", fees_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="card">
  <% if @fee.errors.any? %>
    <div class="alert alert--error">
      <strong><%= pluralize(@fee.errors.count, "error") %> prevented saving:</strong>
      <ul style="margin:8px 0 0 18px;">
        <% @fee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @fee, local: true do |form| %>
    <div class="form-grid">
      <div class="form-group">
        <%= form.label :student_id, "Student", class: "form-label" %>
        <%= form.select :student_id,
              Student.order(:first_name, :last_name).map { |s| [s.full_name, s.id] },
              { prompt: "Select student" },
              { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :amount, class: "form-label" %>
        <%= form.number_field :amount, step: 0.01, class: "form-control" %>
        <div class="form-help" style="margin-top:6px;">Example: 250.00</div>
      </div>

      <div class="form-group">
        <%= form.label :due_date, class: "form-label" %>
        <%= form.date_field :due_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status,
              Fee.statuses.keys.map { |k| [k.humanize, k] },
              { prompt: "Select status" },
              { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :receipt_number, "Receipt #", class: "form-label" %>
        <%= form.text_field :receipt_number, class: "form-control" %>
        <div class="form-help" style="margin-top:6px;">Optional</div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 3, class: "form-control" %>
    </div>

    <div class="page-actions" style="justify-content:flex-end; margin-top: 14px;">
      <%= link_to "Cancel", fees_path, class: "btn" %>
      <%= form.submit "Create Fee", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
