<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="card professional-card">
      <div class="card-title professional-card-title">Profile Information</div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="md:col-span-1">
          <div class="bg-gray-200 border-2 border-dashed rounded-xl w-32 h-32 mx-auto flex items-center justify-center text-gray-500">
            <%= current_user.name.first.upcase %>
          </div>
          <div class="text-center mt-4">
            <%= link_to "Edit Profile", edit_profile_path, class: "btn professional-btn professional-btn-primary" %>
          </div>
        </div>
        
        <div class="md:col-span-2">
          <div class="space-y-4">
            <div class="flex">
              <div class="w-1/3 font-medium text-gray-500">Name</div>
              <div class="w-2/3"><%= @user.name %></div>
            </div>
            
            <div class="flex">
              <div class="w-1/3 font-medium text-gray-500">Email</div>
              <div class="w-2/3"><%= @user.email %></div>
            </div>
            
            <div class="flex">
              <div class="w-1/3 font-medium text-gray-500">Role</div>
              <div class="w-2/3"><%= @user.role.humanize %></div>
            </div>
            
            <div class="flex">
              <div class="w-1/3 font-medium text-gray-500">Phone</div>
              <div class="w-2/3"><%= @user.phone.presence || 'Not provided' %></div>
            </div>
            
            <div class="flex">
              <div class="w-1/3 font-medium text-gray-500">Address</div>
              <div class="w-2/3"><%= @user.address.presence || 'Not provided' %></div>
            </div>
            
            
            <div class="flex">
              <div class="w-1/3 font-medium text-gray-500">Member Since</div>
              <div class="w-2/3"><%= @user.created_at.strftime("%B %d, %Y") %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>