<% content_for :title, "Edit Classroom" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Edit Classroom</h1>
    <p class="page-header__subtitle"><%= @classroom.name %></p>
  </div>

  <div class="page-actions">
    <%= link_to "View", @classroom, class: "btn" %>
    <%= link_to "Back", classrooms_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="card">
  <% if @classroom.errors.any? %>
    <div class="alert alert--error">
      <strong><%= pluralize(@classroom.errors.count, "error") %> prevented saving:</strong>
      <ul style="margin:8px 0 0 18px;">
        <% @classroom.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @classroom, local: true do |form| %>
    <div class="form-grid">
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :capacity, class: "form-label" %>
        <%= form.number_field :capacity, class: "form-control", min: 0 %>
      </div>

      <div class="form-group" style="grid-column: 1 / -1;">
        <%= form.label :teacher_id, "Teacher", class: "form-label" %>
        <%= form.select :teacher_id,
              User.where(role: "teacher").order(:name).map { |u| [u.name, u.id] },
              { prompt: "Select teacher" },
              { class: "form-control" } %>
      </div>

      <div class="form-group" style="grid-column: 1 / -1;">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, rows: 3, class: "form-control" %>
      </div>

      <div class="form-group" style="grid-column: 1 / -1;">
        <%= form.label :schedule, class: "form-label" %>
        <%= form.text_area :schedule, rows: 3, class: "form-control" %>
      </div>
    </div>

    <div class="page-actions" style="justify-content:flex-end; margin-top: 14px;">
      <%= link_to "Cancel", classrooms_path, class: "btn" %>
      <%= form.submit "Save changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
