<% content_for :title, "Edit Classroom" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Edit Classroom: <%= @classroom.name %></h1>
  <%= link_to "Show", @classroom, class: "btn btn-outline" %>
  <%= link_to "Back to Classrooms", classrooms_path, class: "btn btn-outline", style: "margin-left: 0.5rem;" %>
</div>

<div class="card">
  <%= form_with model: @classroom, local: true, class: "form" do |form| %>
    <% if @classroom.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h4>
        <ul>
          <% @classroom.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2">
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :capacity, class: "form-label" %>
        <%= form.number_field :capacity, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :teacher_id, "Teacher", class: "form-label" %>
        <%= form.select :teacher_id, User.where(role: 'teacher').map { |user| [user.name, user.id] }, { prompt: "Select Teacher" }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 3, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :schedule, class: "form-label" %>
      <%= form.text_area :schedule, rows: 3, class: "form-control" %>
    </div>

    <div class="d-flex justify-between mt-4">
      <%= form.submit "Update Classroom", class: "btn btn-primary" %>
      <%= link_to "Cancel", classrooms_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>