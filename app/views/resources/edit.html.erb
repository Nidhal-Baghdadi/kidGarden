<% content_for :title, "Edit Resource" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Edit Resource</h1>
  <%= link_to "Show", @resource, class: "btn btn-outline" %>
  <%= link_to "Back to Resources", resources_path, class: "btn btn-outline", style: "margin-left: 0.5rem;" %>
</div>

<div class="card">
  <%= form_with model: @resource, local: true, class: "form" do |form| %>
    <% if @resource.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h4>
        <ul>
          <% @resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2">
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :category, class: "form-label" %>
        <%= form.select :category, ['worksheet', 'presentation', 'video', 'audio', 'document', 'other'], { selected: @resource.category }, { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :subject, class: "form-label" %>
        <%= form.text_field :subject, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :classroom_id, "Classroom (optional)", class: "form-label" %>
        <%= form.select :classroom_id, Classroom.all.map { |c| [c.name, c.id] }, { selected: @resource.classroom_id, prompt: "All Classrooms" }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :file, "Resource File (optional - leave blank to keep existing)", class: "form-label" %>
      <%= form.file_field :file, class: "form-control" %>
      <% if @resource.file.attached? %>
        <p class="mt-1">Current file: <%= @resource.file.filename %></p>
      <% end %>
    </div>

    <div class="d-flex justify-between mt-4">
      <%= form.submit "Update Resource", class: "btn btn-primary" %>
      <%= link_to "Cancel", resources_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>