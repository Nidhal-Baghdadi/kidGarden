<% content_for :title, "New Resource" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Upload Resource</h1>
    <p class="page-header__subtitle">Add a file or document for teachers and parents.</p>
  </div>

  <div class="page-actions">
    <%= link_to "Back", resources_path, class: "btn" %>
  </div>
</div>

<div class="card">
  <% if @resource.errors.any? %>
    <div class="alert alert--error">
      <strong><%= pluralize(@resource.errors.count, "error") %> prevented saving:</strong>
      <ul style="margin:8px 0 0 18px;">
        <% @resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @resource, local: true do |form| %>
    <div class="form-grid">
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :category, class: "form-label" %>
        <%= form.select :category,
          ['worksheet', 'presentation', 'video', 'audio', 'document', 'other'].map { |v| [v.humanize, v] },
          { prompt: "Select category" },
          { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :subject, class: "form-label" %>
        <%= form.text_field :subject, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :classroom_id, "Classroom (optional)", class: "form-label" %>
        <%= form.select :classroom_id,
          Classroom.order(:name).map { |c| [c.name, c.id] },
          { prompt: "All Classrooms" },
          { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control" %>
      <div class="form-help" style="margin-top:6px;">Short notes about what this resource is for.</div>
    </div>

    <div class="form-group">
      <%= form.label :file, "Resource file", class: "form-label" %>
      <%= form.file_field :file, class: "form-control" %>
      <div class="form-help" style="margin-top:6px;">PDF, document, image, etc.</div>
    </div>

    <div class="page-actions" style="justify-content:flex-end; margin-top:14px;">
      <%= link_to "Cancel", resources_path, class: "btn" %>
      <%= form.submit "Upload", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
