<% content_for :title, "New Parent" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Add New Parent</h1>
    <p class="page-header__subtitle">Create a parent account and fill in contact details.</p>
  </div>

  <div class="page-actions">
    <%= link_to "Back to Parents", parents_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="card">
  <%= form_with model: @parent, local: true do |form| %>
    <% if @parent.errors.any? %>
      <div class="alert alert--error">
        <strong><%= pluralize(@parent.errors.count, "error") %> prohibited this parent from being saved:</strong>
        <ul style="margin:8px 0 0 18px;">
          <% @parent.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-grid">
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control", autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= form.label :phone, class: "form-label" %>
        <%= form.telephone_field :phone, class: "form-control", autocomplete: "tel" %>
      </div>

      <div class="form-group">
        <%= form.label :date_of_birth, "Date of Birth", class: "form-label" %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>

      <div class="form-group" style="grid-column: 1 / -1;">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_area :address, rows: 3, class: "form-control" %>
        <div class="form-help" style="margin-top:6px;">Street, city, and any useful notes.</div>
      </div>

      <div class="form-group">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>
    </div>

    <div style="display:flex; justify-content:flex-end; gap:10px; margin-top: 10px;">
      <%= link_to "Cancel", parents_path, class: "btn" %>
      <%= form.submit "Create Parent", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
