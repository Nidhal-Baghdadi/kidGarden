<% content_for :title, "Event Details" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title"><%= @event.title %></h1>
    <p class="page-header__subtitle">Event details</p>
  </div>

  <div class="page-actions">
    <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary" %>
    <%= link_to "Back", events_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="form-grid" style="margin-bottom:14px;">
  <div class="card">
    <h3 style="margin:0 0 12px 0;">Schedule</h3>

    <div class="form-group">
      <div class="form-label">Start</div>
      <div class="readonly"><%= @event.start_time&.strftime("%B %d, %Y at %I:%M %p") || "—" %></div>
    </div>

    <div class="form-group">
      <div class="form-label">End</div>
      <div class="readonly"><%= @event.end_time&.strftime("%B %d, %Y at %I:%M %p") || "—" %></div>
    </div>
  </div>

  <div class="card">
    <h3 style="margin:0 0 12px 0;">Info</h3>

    <div class="form-group">
      <div class="form-label">Location</div>
      <div class="readonly"><%= @event.location.presence || "—" %></div>
    </div>

    <div class="form-group">
      <div class="form-label">Organizer</div>
      <div class="readonly"><%= @event.organizer&.name || "—" %></div>
    </div>
  </div>
</div>

<div class="card">
  <h3 style="margin:0 0 12px 0;">Description</h3>

  <div class="readonly" style="height:auto; padding:10px 12px; align-items:flex-start;">
    <%= @event.description.presence || "No description provided." %>
  </div>
</div>
