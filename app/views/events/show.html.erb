<% content_for :title, "Event Details" %>

<div class="d-flex justify-between items-center mb-4">
  <h1><%= @event.title %></h1>
  <div>
    <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary" %>
    <%= link_to "Back to Events", events_path, class: "btn btn-outline", style: "margin-left: 0.5rem;" %>
  </div>
</div>

<div class="grid grid-cols-2 mb-4">
  <div class="card">
    <h3>Event Information</h3>
    <div class="form-group">
      <label><strong>Title:</strong></label>
      <p><%= @event.title %></p>
    </div>
    <div class="form-group">
      <label><strong>Start Time:</strong></label>
      <p><%= @event.start_time.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
    <div class="form-group">
      <label><strong>End Time:</strong></label>
      <p><%= @event.end_time.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
  </div>

  <div class="card">
    <h3>Additional Information</h3>
    <div class="form-group">
      <label><strong>Location:</strong></label>
      <p><%= @event.location %></p>
    </div>
    <div class="form-group">
      <label><strong>Organizer:</strong></label>
      <p><%= @event.organizer&.name || "N/A" %></p>
    </div>
  </div>
</div>

<div class="card">
  <h3>Event Description</h3>
  <div class="form-group">
    <p><%= @event.description.present? ? @event.description : "No description provided" %></p>
  </div>
</div>