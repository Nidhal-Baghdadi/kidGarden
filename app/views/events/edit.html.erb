<% content_for :title, "Edit Event" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Edit Event</h1>
    <p class="page-header__subtitle"><%= @event.title %></p>
  </div>

  <div class="page-actions">
    <%= link_to "Back", events_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="card">
  <% if @event.errors.any? %>
    <div class="alert alert--error">
      <strong><%= pluralize(@event.errors.count, "error") %> prevented saving:</strong>
      <ul style="margin:8px 0 0 18px;">
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @event, local: true do |form| %>
    <div class="form-grid">
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :location, class: "form-label" %>
        <%= form.text_field :location, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :start_time, "Start time", class: "form-label" %>
        <%= form.datetime_local_field :start_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_time, "End time", class: "form-label" %>
        <%= form.datetime_local_field :end_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :organizer_id, "Organizer", class: "form-label" %>
        <%= form.select :organizer_id,
              User.where(role: %w[teacher admin staff]).order(:name).map { |u| [u.name, u.id] },
              { selected: @event.organizer_id },
              { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control" %>
    </div>

    <div class="page-actions" style="justify-content:flex-end; margin-top:14px;">
      <%= link_to "Cancel", events_path, class: "btn" %>
      <%= form.submit "Save changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
