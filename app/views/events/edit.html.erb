<% content_for :title, "Edit Event" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>Edit Event</h1>
  <%= link_to "Back to Events", events_path, class: "btn btn-outline" %>
</div>

<div class="card">
  <%= form_with model: @event, local: true, class: "form" do |form| %>
    <% if @event.errors.any? %>
      <div class="alert alert-error">
        <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-2">
      <div class="form-group">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :location, class: "form-label" %>
        <%= form.text_field :location, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :start_time, "Start Time", class: "form-label" %>
        <%= form.datetime_local_field :start_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :end_time, "End Time", class: "form-label" %>
        <%= form.datetime_local_field :end_time, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :organizer_id, "Organizer", class: "form-label" %>
        <%= form.select :organizer_id, User.where(role: %w[teacher admin staff]).map { |user| [user.name, user.id] }, { selected: @event.organizer_id }, { class: "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control" %>
    </div>

    <div class="d-flex justify-between mt-4">
      <%= form.submit "Update Event", class: "btn btn-primary" %>
      <%= link_to "Cancel", events_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>