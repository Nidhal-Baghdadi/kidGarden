<% content_for :title, "Events" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Events</h1>
    <p class="page-header__subtitle">School calendar and announcements.</p>
  </div>

  <div class="page-actions">
    <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="card">
  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Start</th>
          <th>End</th>
          <th>Location</th>
          <th>Organizer</th>
          <th class="no-sort">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= event.title %></td>
            <td><%= event.start_time&.strftime("%b %d, %Y %I:%M %p") || "—" %></td>
            <td><%= event.end_time&.strftime("%b %d, %Y %I:%M %p") || "—" %></td>
            <td><%= event.location.presence || "—" %></td>
            <td><%= event.organizer&.name || "—" %></td>
            <td>
              <%= link_to "View", event, class: "btn btn-sm" %>
              <%= link_to "Edit", edit_event_path(event), class: "btn btn-ghost btn-sm" %>
              <%= link_to "Delete", event,
                    method: :delete,
                    data: { confirm: "Delete this event?" },
                    class: "btn btn-ghost btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @events.empty? %>
    <div style="padding:18px;">
      <div class="form-help">No events yet.</div>
      <div style="margin-top:12px;">
        <%= link_to "Create Event", new_event_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
