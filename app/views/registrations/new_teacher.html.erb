<% content_for :title, "Teacher Registration" %>

<div class="auth-shell">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-brand">
        <span class="auth-brand__logo-wrap">
          <%= image_tag "kid_garden_main_logo.png", class: "auth-brand__logo", alt: "KidGarden" %>
        </span>
      </div>

      <h2 class="auth-title">Create a Teacher Account</h2>
      <p class="auth-subtitle">Register to manage classrooms, students, and attendance.</p>
    </div>

    <% if @user.errors.any? %>
      <div class="alert alert--error">
        <strong><%= pluralize(@user.errors.count, "error") %> prevented registration:</strong>
        <ul style="margin:8px 0 0 18px; color: var(--text-2);">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: register_teacher_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, "Full name", class: "form-label" %>
        <%= form.text_field :name, class: "form-control", autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= form.label :email, "Email address", class: "form-label" %>
        <%= form.email_field :email, class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-control", autocomplete: "new-password" %>
        <div class="form-help" style="margin-top:6px;">
          Use at least 8 characters.
        </div>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Confirm password", class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>

      <div style="margin-top: 10px;">
        <%= form.submit "Register", class: "btn btn-primary", style: "width:100%;" %>
      </div>
    <% end %>

    <div class="auth-divider"></div>

    <div style="display:flex; justify-content:space-between; align-items:center; gap:12px;">
      <div class="form-help" style="margin:0;">Already have an account?</div>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>
</div>
