<% content_for :title, "Calendar" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">School Calendar</h1>
    <p class="page-header__subtitle">Curriculum and events in one place.</p>
  </div>
</div>

<div class="card" style="margin-bottom:14px;">
  <div class="calendar">
    <div class="calendar__top">
      <div class="calendar__title">
        <div class="calendar__month" id="current-month-year"></div>
        <div class="calendar__hint">Click an item to view details.</div>
      </div>

      <div class="calendar__controls">
        <button id="prev-month" class="btn btn-ghost" type="button">‹ Prev</button>
        <button id="next-month" class="btn btn-ghost" type="button">Next ›</button>
      </div>
    </div>

    <div id="calendar-grid" class="calendar__grid" aria-label="Calendar grid"></div>
  </div>
</div>

<div class="form-grid">
  <div class="card">
    <div class="page-header" style="margin-bottom:10px;">
      <div>
        <h2 class="page-header__title" style="font-size:1.05rem;">Curriculum Schedule</h2>
        <p class="page-header__subtitle">Upcoming curriculum items.</p>
      </div>
    </div>

    <% if @curriculums.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Subject</th>
              <th>Title</th>
              <th>Date & Time</th>
              <th>Classroom</th>
            </tr>
          </thead>
          <tbody>
            <% @curriculums.each do |curriculum| %>
              <tr>
                <td><%= curriculum.subject %></td>
                <td><%= curriculum.title %></td>
                <td>
                  <%= curriculum.start_time.strftime("%b %d, %Y") %><br>
                  <span class="form-help">
                    <%= curriculum.start_time.strftime("%I:%M %p") %> – <%= curriculum.end_time.strftime("%I:%M %p") %>
                  </span>
                </td>
                <td><%= curriculum.classroom&.name || "—" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="form-help">No curriculum scheduled.</div>
    <% end %>
  </div>

  <div class="card">
    <div class="page-header" style="margin-bottom:10px;">
      <div>
        <h2 class="page-header__title" style="font-size:1.05rem;">School Events</h2>
        <p class="page-header__subtitle">Upcoming events and activities.</p>
      </div>
    </div>

    <% if @events.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Event</th>
              <th>Date & Time</th>
              <th>Location</th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.title %></td>
                <td>
                  <%= event.start_time.strftime("%b %d, %Y") %><br>
                  <span class="form-help">
                    <%= event.start_time.strftime("%I:%M %p") %> – <%= event.end_time.strftime("%I:%M %p") %>
                  </span>
                </td>
                <td><%= event.location.presence || "—" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="form-help">No events scheduled.</div>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div id="calendar-modal" class="modal" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="calendar-modal-title">
  <div class="modal__backdrop" data-modal-close="true"></div>

  <div class="modal__panel">
    <div class="modal__header">
      <div>
        <div class="modal__kicker" id="calendar-modal-type">Details</div>
        <h3 class="modal__title" id="calendar-modal-title">Item</h3>
      </div>

      <button class="icon-btn" type="button" aria-label="Close" data-modal-close="true">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none">
          <path d="M18 6L6 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
      </button>
    </div>

    <div class="modal__body">
      <div class="modal__meta">
        <div class="modal__meta-row">
          <div class="modal__meta-label">Date</div>
          <div class="modal__meta-value" id="calendar-modal-date">—</div>
        </div>

        <div class="modal__meta-row">
          <div class="modal__meta-label">Time</div>
          <div class="modal__meta-value" id="calendar-modal-time">—</div>
        </div>
      </div>

      <div class="modal__desc">
        <div class="modal__meta-label">Description</div>
        <div class="readonly" id="calendar-modal-desc" style="height:auto; padding:10px 12px; align-items:flex-start;">
          —
        </div>
      </div>
    </div>

    <div class="modal__footer">
      <button class="btn btn-ghost" type="button" data-modal-close="true">Close</button>
    </div>
  </div>
</div>

<style>
  /* ---------- Calendar (theme-aligned) ---------- */
  .calendar { width: 100%; }

  .calendar__top {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: 12px;
    margin-bottom: 12px;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--border);
  }

  .calendar__month {
    font-size: 1.05rem;
    font-weight: 800;
    letter-spacing: -0.01em;
  }

  .calendar__hint {
    margin-top: 6px;
    color: var(--muted);
    font-weight: 500;
    font-size: 0.92rem;
  }

  .calendar__controls {
    display: inline-flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
  }

  .calendar__grid {
    display: grid;
    grid-template-columns: repeat(7, minmax(0, 1fr));
    gap: 8px;
  }

  .cal-head {
    background: var(--surface-2);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 10px 8px;
    text-align: center;
    font-weight: 800;
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .cal-day {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    min-height: 120px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  .cal-day.is-empty {
    background: transparent;
    border: 1px dashed color-mix(in oklab, var(--border) 70%, transparent);
    box-shadow: none;
  }

  .cal-day__top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 8px;
  }

  .cal-day__num {
    font-weight: 800;
    color: var(--text);
    font-size: 0.95rem;
  }

  .cal-day.is-today {
    border-color: color-mix(in oklab, var(--primary) 40%, var(--border));
    box-shadow: 0 0 0 3px color-mix(in oklab, var(--primary) 18%, transparent);
  }

  .cal-day.is-today .cal-day__num {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 26px;
    min-width: 26px;
    padding: 0 8px;
    border-radius: 999px;
    background: rgba(15,118,110,.12);
    color: var(--primary);
  }

  .cal-events {
    display: flex;
    flex-direction: column;
    gap: 6px;
    overflow: auto;
    padding-right: 2px;
  }

  .cal-pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    border-radius: 10px;
    padding: 8px 10px;
    border: 1px solid var(--border);
    background: var(--surface-2);
    cursor: pointer;
    user-select: none;
    transition: transform .08s ease, background-color .15s ease, border-color .15s ease;
    min-height: 34px;
  }

  .cal-pill:hover { background: color-mix(in oklab, var(--surface-2) 70%, white); }
  .cal-pill:active { transform: translateY(1px); }

  .cal-pill__dot {
    width: 10px;
    height: 10px;
    border-radius: 999px;
    flex: 0 0 10px;
  }

  .cal-pill__text {
    font-size: 0.85rem;
    font-weight: 650;
    color: var(--text-2);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .cal-pill--curriculum .cal-pill__dot { background: var(--primary); }
  .cal-pill--event .cal-pill__dot { background: var(--accent); }

  .cal-more {
    color: var(--muted);
    font-size: 0.85rem;
    font-weight: 600;
    margin-top: 2px;
  }

  @media (max-width: 900px) {
    .calendar__grid { gap: 6px; }
    .cal-day { min-height: 110px; padding: 8px; }
  }

  /* ---------- Modal (theme-aligned) ---------- */
  .modal {
    position: fixed;
    inset: 0;
    display: none;
    z-index: 100;
  }
  .modal.is-open { display: block; }

  .modal__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(16,24,40,.55);
  }

  body[data-theme="dark"] .modal__backdrop {
    background: rgba(0,0,0,.55);
  }

  .modal__panel {
    position: relative;
    width: min(560px, calc(100% - 32px));
    margin: 10vh auto 0 auto;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    box-shadow: var(--shadow-md);
    overflow: hidden;
  }

  .modal__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 14px;
    padding: 14px 14px;
    border-bottom: 1px solid var(--border);
    background: color-mix(in oklab, var(--surface) 85%, var(--surface-2));
  }

  .modal__kicker {
    font-size: 0.75rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--muted);
    font-weight: 800;
  }

  .modal__title {
    margin: 2px 0 0 0;
    font-size: 1.1rem;
    font-weight: 800;
    letter-spacing: -0.01em;
  }

  .modal__body {
    padding: 14px;
    display: grid;
    gap: 12px;
  }

  .modal__meta {
    display: grid;
    gap: 8px;
    padding: 12px;
    border: 1px solid var(--border);
    border-radius: 12px;
    background: var(--surface-2);
  }

  .modal__meta-row {
    display: grid;
    grid-template-columns: 84px 1fr;
    gap: 10px;
    align-items: center;
  }

  .modal__meta-label {
    color: var(--muted);
    font-weight: 700;
    font-size: 0.85rem;
  }

  .modal__meta-value {
    color: var(--text);
    font-weight: 650;
    font-size: 0.92rem;
  }

  .modal__footer {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    padding: 12px 14px;
    border-top: 1px solid var(--border);
    background: color-mix(in oklab, var(--surface) 85%, var(--surface-2));
  }
</style>

<script>
  function initCalendarPage() {
    const calendarGrid = document.getElementById("calendar-grid");
    const monthYear = document.getElementById("current-month-year");
    const prevBtn = document.getElementById("prev-month");
    const nextBtn = document.getElementById("next-month");

    if (!calendarGrid || !monthYear || !prevBtn || !nextBtn) return;

    // If Turbo caches and re-renders, allow re-init safely
    // (clear previous content + remove old listeners by cloning buttons)
    const prevClone = prevBtn.cloneNode(true);
    const nextClone = nextBtn.cloneNode(true);
    prevBtn.parentNode.replaceChild(prevClone, prevBtn);
    nextBtn.parentNode.replaceChild(nextClone, nextBtn);

    const modal = document.getElementById("calendar-modal");
    const modalType = document.getElementById("calendar-modal-type");
    const modalTitle = document.getElementById("calendar-modal-title");
    const modalDate = document.getElementById("calendar-modal-date");
    const modalTime = document.getElementById("calendar-modal-time");
    const modalDesc = document.getElementById("calendar-modal-desc");

    function openModal(evt) {
      if (!modal) return;

      modalType.textContent = evt.type === "curriculum" ? "Curriculum" : "Event";
      modalTitle.textContent = evt.title || "—";

      const dateStr = evt.start.toLocaleDateString(undefined, {
        weekday: "long", year: "numeric", month: "long", day: "numeric"
      });
      modalDate.textContent = dateStr;

      const timeStr =
        `${evt.start.toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" })} – ` +
        `${evt.end.toLocaleTimeString([], { hour: "2-digit", minute: "2-digit" })}`;
      modalTime.textContent = timeStr;

      modalDesc.textContent = (evt.description && evt.description.trim().length) ? evt.description : "No description.";

      modal.classList.add("is-open");
      modal.setAttribute("aria-hidden", "false");
      document.body.style.overflow = "hidden";
    }

    function closeModal() {
      if (!modal) return;
      modal.classList.remove("is-open");
      modal.setAttribute("aria-hidden", "true");
      document.body.style.overflow = "";
    }

    if (modal) {
      // click backdrop/close buttons
      modal.addEventListener("click", function (e) {
        if (e.target && e.target.dataset && e.target.dataset.modalClose === "true") closeModal();
      });

      // escape closes
      document.addEventListener("keydown", function (e) {
        if (e.key === "Escape" && modal.classList.contains("is-open")) closeModal();
      });
    }

    // Server-provided events
    const calendarEvents = [
      <% @calendar_events.each_with_index do |event, index| %>
        {
          id: "<%= "event_#{event[:type]}_#{index}" %>",
          title: "<%= j event[:title] %>",
          start: new Date("<%= event[:start].iso8601 %>"),
          end: new Date("<%= event[:end].iso8601 %>"),
          type: "<%= event[:type] %>",
          description: "<%= j(event[:description].to_s) %>"
        }<%= index < @calendar_events.length - 1 ? "," : "" %>
      <% end %>
    ];

    const now = new Date();
    let currentMonth = now.getMonth();
    let currentYear = now.getFullYear();

    const daysOfWeek = ["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"];
    const monthNames = ["January", "February", "March", "April", "May", "June",
                        "July", "August", "September", "October", "November", "December"];

    function renderCalendar() {
      calendarGrid.innerHTML = "";
      monthYear.textContent = `${monthNames[currentMonth]} ${currentYear}`;

      // headers
      daysOfWeek.forEach((d) => {
        const head = document.createElement("div");
        head.className = "cal-head";
        head.textContent = d;
        calendarGrid.appendChild(head);
      });

      const firstDay = new Date(currentYear, currentMonth, 1).getDay();
      const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();

      // blanks
      for (let i = 0; i < firstDay; i++) {
        const empty = document.createElement("div");
        empty.className = "cal-day is-empty";
        calendarGrid.appendChild(empty);
      }

      for (let day = 1; day <= daysInMonth; day++) {
        const dayCell = document.createElement("div");
        dayCell.className = "cal-day";

        const isToday =
          currentYear === now.getFullYear() &&
          currentMonth === now.getMonth() &&
          day === now.getDate();
        if (isToday) dayCell.classList.add("is-today");

        const top = document.createElement("div");
        top.className = "cal-day__top";

        const num = document.createElement("div");
        num.className = "cal-day__num";
        num.textContent = day;

        top.appendChild(num);
        dayCell.appendChild(top);

        const list = document.createElement("div");
        list.className = "cal-events";

        const dayEvents = calendarEvents.filter((evt) => {
          const d = evt.start;
          return d.getFullYear() === currentYear &&
                 d.getMonth() === currentMonth &&
                 d.getDate() === day;
        });

        const MAX = 4;
        dayEvents.slice(0, MAX).forEach((evt) => {
          const pill = document.createElement("div");
          pill.className = `cal-pill ${evt.type === "curriculum" ? "cal-pill--curriculum" : "cal-pill--event"}`;
          pill.setAttribute("role", "button");
          pill.setAttribute("tabindex", "0");

          const dot = document.createElement("span");
          dot.className = "cal-pill__dot";

          const text = document.createElement("span");
          text.className = "cal-pill__text";
          text.textContent = evt.title;

          pill.appendChild(dot);
          pill.appendChild(text);

          pill.addEventListener("click", () => openModal(evt));
          pill.addEventListener("keydown", (e) => {
            if (e.key === "Enter" || e.key === " ") {
              e.preventDefault();
              openModal(evt);
            }
          });

          list.appendChild(pill);
        });

        if (dayEvents.length > MAX) {
          const more = document.createElement("div");
          more.className = "cal-more";
          more.textContent = `+${dayEvents.length - MAX} more`;
          list.appendChild(more);
        }

        dayCell.appendChild(list);
        calendarGrid.appendChild(dayCell);
      }
    }

    // navigation
    prevClone.addEventListener("click", function (e) {
      e.preventDefault();
      currentMonth--;
      if (currentMonth < 0) { currentMonth = 11; currentYear--; }
      renderCalendar();
    });

    nextClone.addEventListener("click", function (e) {
      e.preventDefault();
      currentMonth++;
      if (currentMonth > 11) { currentMonth = 0; currentYear++; }
      renderCalendar();
    });

    renderCalendar();
  }

  // Works with normal page loads + Turbo + Turbolinks
  document.addEventListener("DOMContentLoaded", initCalendarPage);
  document.addEventListener("turbo:load", initCalendarPage);
  document.addEventListener("turbolinks:load", initCalendarPage);
</script>

