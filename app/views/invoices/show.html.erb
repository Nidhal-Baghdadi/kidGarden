<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Invoice <%= @invoice.invoice_number %></h1>
    <div class="space-x-2">
      <%= link_to 'Download PDF', download_pdf_invoice_path(@invoice), class: 'bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg', target: '_blank' %>
      <%= link_to 'Edit', edit_invoice_path(@invoice), class: 'bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded-lg' %>
      <%= link_to 'Back to Invoices', invoices_path, class: 'bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded-lg' %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Invoice Details -->
    <div class="lg:col-span-2 bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Invoice Details</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div>
          <p class="text-sm text-gray-600">Invoice Number</p>
          <p class="font-medium"><%= @invoice.invoice_number %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Issue Date</p>
          <p class="font-medium"><%= @invoice.issue_date.strftime("%B %d, %Y") %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Due Date</p>
          <p class="font-medium"><%= @invoice.due_date.strftime("%B %d, %Y") %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Status</p>
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
            <% case @invoice.status %>
              <% when 'paid' %>
                bg-green-100 text-green-800
              <% when 'pending' %>
                bg-yellow-100 text-yellow-800
              <% when 'overdue' %>
                bg-red-100 text-red-800
              <% when 'cancelled' %>
                bg-gray-100 text-gray-800
              <% when 'partially_paid' %>
                bg-blue-100 text-blue-800
              <% else %>
                bg-gray-100 text-gray-800
            <% end %>">
            <%= @invoice.status_label %>
          </span>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Student</p>
          <p class="font-medium"><%= @invoice.student.full_name %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Parent/Guardian</p>
          <p class="font-medium"><%= @invoice.parent.name %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Month/Year</p>
          <p class="font-medium"><%= @invoice.month_year %></p>
        </div>
        
        <div>
          <p class="text-sm text-gray-600">Total Amount</p>
          <p class="font-medium text-lg"><%= number_to_currency(@invoice.total_amount, unit: "$") %></p>
        </div>
      </div>
      
      <% if @invoice.notes.present? %>
        <div class="mb-6">
          <p class="text-sm text-gray-600">Notes</p>
          <p class="font-medium"><%= @invoice.notes %></p>
        </div>
      <% end %>
      
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Invoice Items</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @invoice.invoice_items.each do |item| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= item.description %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= number_to_currency(item.amount, unit: "$") %></div>
                </td>
              </tr>
            <% end %>
            <tr class="bg-gray-50 font-semibold">
              <td class="px-6 py-4 whitespace-nowrap text-right">Total</td>
              <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(@invoice.total_amount, unit: "$") %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Summary Panel -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Summary</h2>
      
      <div class="space-y-4">
        <div class="flex justify-between">
          <span class="text-gray-600">Total Amount:</span>
          <span class="font-medium"><%= number_to_currency(@invoice.total_amount, unit: "$") %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-600">Amount Paid:</span>
          <span class="font-medium"><%= number_to_currency(@invoice.amount_paid, unit: "$") %></span>
        </div>
        
        <div class="flex justify-between">
          <span class="text-gray-600">Balance Remaining:</span>
          <span class="font-medium"><%= number_to_currency(@invoice.balance_remaining, unit: "$") %></span>
        </div>
        
        <div class="pt-4 border-t border-gray-200">
          <p class="text-sm text-gray-600">Days Until Due:</p>
          <p class="text-lg font-semibold">
            <% if @invoice.due_soon? %>
              <span class="text-orange-600"><%= @invoice.days_until_due %> days</span>
            <% elsif @invoice.overdue? %>
              <span class="text-red-600"><%= @invoice.days_until_due.abs %> days overdue</span>
            <% else %>
              <span class="text-green-600"><%= @invoice.days_until_due %> days</span>
            <% end %>
          </p>
        </div>
      </div>
      
      <div class="mt-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-2">Actions</h3>
        <div class="space-y-2">
          <%= link_to 'Mark as Paid', invoice_path(@invoice, invoice: { status: 'paid' }), 
                      method: :patch, 
                      class: 'block w-full text-center bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg',
                      confirm: 'Are you sure you want to mark this invoice as paid?' %>
          
          <%= link_to 'Send Reminder', '#', 
                      class: 'block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>