<div class="item-row border border-gray-200 rounded-lg p-4 bg-gray-50">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :description, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
    
    <div>
      <%= f.label :amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :amount, step: 0.01, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
    
    <div class="flex items-end">
      <%= f.hidden_field :_destroy %>
      <button type="button" class="remove-item bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-3 rounded-lg text-sm">
        Remove
      </button>
    </div>
  </div>
</div>