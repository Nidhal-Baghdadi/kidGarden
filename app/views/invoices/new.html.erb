<div class="card">
  <div class="card__header">
    <h1 class="card__title">New Invoice</h1>
  </div>

  <%= form_with(model: @invoice, local: true, class: "card__section") do |form| %>
    <% if @invoice.errors.any? %>
      <div class="alert alert--error">
        <strong><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</strong>
        <ul class="mt-2">
          <% @invoice.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :student_id, class: "form-label" %>
        <%= form.collection_select :student_id, @students, :id, :full_name, { prompt: "Select a student" }, { class: "form-control" } %>
      </div>

      <div>
        <%= form.label :parent_id, class: "form-label" %>
        <%= form.collection_select :parent_id, @parents, :id, :name, { prompt: "Select a parent" }, { class: "form-control" } %>
      </div>

      <div>
        <%= form.label :month, class: "form-label" %>
        <%= form.select :month, options_for_select((1..12).map { |m| [Date::MONTHNAMES[m], m] }), { prompt: "Select month" }, { class: "form-control" } %>
      </div>

      <div>
        <%= form.label :year, class: "form-label" %>
        <% years = ((Date.current.year - 2)..(Date.current.year + 1)).to_a %>
        <%= form.select :year, options_for_select(years.map { |y| [y, y] }), { prompt: "Select year" }, { class: "form-control" } %>
      </div>

      <div>
        <%= form.label :due_date, class: "form-label" %>
        <%= form.date_field :due_date, class: "form-control" %>
      </div>

      <div>
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status, options_for_select([["Pending", "pending"], ["Paid", "paid"], ["Overdue", "overdue"], ["Cancelled", "cancelled"], ["Partially Paid", "partially_paid"]]), { prompt: "Select status" }, { class: "form-control" } %>
      </div>
    </div>

    <div class="mt-6">
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, rows: 3, class: "form-control" %>
    </div>

    <div class="border-t pt-6" style="border-top: 1px solid var(--border);">
      <h2 class="text-xl font-semibold mb-4">Invoice Items</h2>

      <div id="invoice-items">
        <%= form.fields_for :invoice_items do |item_form| %>
          <%= render 'invoice_item_fields', f: item_form %>
        <% end %>
      </div>

      <div class="mt-4">
        <button type="button" id="add-item" class="btn">
          Add Item
        </button>
      </div>
    </div>

    <div class="flex justify-end gap-3 pt-6" style="border-top: 1px solid var(--border); margin-top: 24px; padding-top: 24px;">
      <%= link_to 'Cancel', invoices_path, class: 'btn' %>
      <%= form.submit 'Create Invoice', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const addItemBtn = document.getElementById('add-item');
  const invoiceItemsContainer = document.getElementById('invoice-items');

  // Function to generate a unique ID for new items
  function generateId() {
    return new Date().getTime();
  }

  addItemBtn.addEventListener('click', function() {
    const newId = generateId();
    const newItemHtml = `
      <div class="item-row" style="border: 1px solid var(--border); border-radius: 8px; padding: 16px; background: var(--surface-2);">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="form-label">Description</label>
            <input type="text" name="invoice[invoice_items_attributes][${newId}][description]"
                   class="form-control"
                   placeholder="Item description">
          </div>

          <div>
            <label class="form-label">Amount</label>
            <input type="number" step="0.01" name="invoice[invoice_items_attributes][${newId}][amount]"
                   class="form-control"
                   placeholder="0.00">
          </div>

          <div class="flex items-end">
            <button type="button" class="remove-item btn btn-danger">
              Remove
            </button>
          </div>
        </div>
      </div>
    `;

    invoiceItemsContainer.insertAdjacentHTML('beforeend', newItemHtml);

    // Add event listener to the new remove button
    invoiceItemsContainer.lastElementChild.querySelector('.remove-item').addEventListener('click', function() {
      this.closest('.item-row').remove();
    });
  });

  // Add event listeners to existing remove buttons
  document.querySelectorAll('.remove-item').forEach(button => {
    button.addEventListener('click', function() {
      this.closest('.item-row').remove();
    });
  });
});
</script>