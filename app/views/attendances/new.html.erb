<% content_for :title, "New Attendance" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Record Attendance</h1>
    <p class="page-header__subtitle">Add a new attendance record.</p>
  </div>

  <div class="page-actions">
    <%= link_to "Back", attendances_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="card">
  <% if @attendance.errors.any? %>
    <div class="alert alert--error">
      <strong><%= pluralize(@attendance.errors.count, "error") %> prevented saving:</strong>
      <ul style="margin:8px 0 0 18px;">
        <% @attendance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @attendance, local: true do |form| %>
    <div class="form-grid">
      <div class="form-group">
        <%= form.label :student_id, "Student", class: "form-label" %>
        <%= form.select :student_id,
              Student.order(:first_name, :last_name).map { |s| [s.full_name, s.id] },
              { prompt: "Select student" },
              { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :date, class: "form-label" %>
        <%= form.date_field :date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :status, class: "form-label" %>
        <%= form.select :status,
              Attendance.statuses.keys.map { |k| [k.humanize, k] },
              { prompt: "Select status" },
              { class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= form.label :staff_id, "Taken by", class: "form-label" %>
        <%= form.select :staff_id,
              User.where(role: %w[teacher staff]).order(:name).map { |u| [u.name, u.id] },
              { prompt: "Select staff" },
              { class: "form-control" } %>
        <div class="form-help" style="margin-top:6px;">Defaults to you if left empty.</div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :notes, class: "form-label" %>
      <%= form.text_area :notes, rows: 3, class: "form-control" %>
      <div class="form-help" style="margin-top:6px;">Optional notes (late, appointment, etc.).</div>
    </div>

    <div class="page-actions" style="justify-content:flex-end; margin-top: 14px;">
      <%= link_to "Cancel", attendances_path, class: "btn" %>
      <%= form.submit "Record Attendance", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
