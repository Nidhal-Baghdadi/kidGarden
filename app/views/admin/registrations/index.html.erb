<% content_for :title, "Pending Registrations" %>

<div class="page-header">
  <div>
    <h1 class="page-header__title">Pending Registrations</h1>
    <p class="page-header__subtitle">Review and approve new account requests.</p>
  </div>
</div>

<div class="card">
  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Requested Role</th>
          <th>Registration Date</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody id="registrations">
        <%= render partial: "registration_row", collection: @registrations, as: :registration %>
      </tbody>
    </table>
  </div>
</div>
