<% content_for :title, "New Message" %>

<div class="d-flex justify-between items-center mb-4">
  <h1>New Message</h1>
  <%= link_to "Back to Messages", user_conversations_path, class: "btn btn-outline" %>
</div>

<div class="card">
  <%= form_with url: start_the_conversation_path, method: :post, local: true, class: "form" do |form| %>
    <div class="form-group">
      <%= form.label :recipient_id, "Recipient", class: "form-label" %>
      <%= form.select :recipient_id, 
                      options_from_collection_for_select(@recipients, :id, :name), 
                      { prompt: "Select Recipient" }, 
                      { class: "form-control" } %>
    </div>

    <div class="d-flex justify-between mt-4">
      <%= form.submit "Start Conversation", class: "btn btn-primary" %>
      <%= link_to "Cancel", user_conversations_path, class: "btn btn-outline" %>
    </div>
  <% end %>
</div>